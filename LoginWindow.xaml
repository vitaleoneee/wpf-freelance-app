<Window x:Class="FreelanceAplication.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вхід" Height="400" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Background="#EAF2F8" Margin="20">
        <Border Background="White" CornerRadius="10" Padding="30" 
                VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel>
                <TextBlock Text="Вхід у кабінет" FontSize="22" FontWeight="Bold" Foreground="#2C3E50" TextAlignment="Center" Margin="0 0 0 20"/>

                <Label Content="Електронна пошта"/>
                <TextBox x:Name="EmailTextBox"/>

                <Label Content="Пароль" Margin="0,15,0,0"/>
                <PasswordBox x:Name="PasswordBox"/>

                <Button Content="Увійти" Click="LoginButton_Click" Margin="0 25 0 0" Background="#3498DB" Foreground="White" Padding="10"/>

                <TextBlock TextAlignment="Center" Margin="0,20,0,0">
                    <Run Text="Не маєте акаунту? "/>
                    <Hyperlink Click="RegisterLink_Click" Foreground="#3498DB">Зареєструватися</Hyperlink>
                </TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</Window>
