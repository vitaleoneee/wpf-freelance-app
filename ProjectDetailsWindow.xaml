<Window x:Class="FreelanceAplication.ProjectDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Деталі проєкту" Height="450" Width="600" WindowStartupLocation="CenterScreen"
        Background="#f4f4f4" >
    <StackPanel>

        <!-- Хедер -->
        <Border Background="#4a90e2" Margin="20">
            <TextBlock Text="Деталі проєкту" Foreground="White" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
        </Border>


        <!-- Контейнер з деталями -->
        <Border Background="White" Margin="20" CornerRadius="5" BorderBrush="#4a90e2" BorderThickness="5" Height="181" Width="542">
            <StackPanel>
                <TextBlock x:Name="TitleText" FontSize="20" FontWeight="Bold" Margin="0,0,0,15" TextWrapping="Wrap"/>

                <TextBlock Text="Категорія:" FontWeight="Bold" Foreground="#4a90e2"/>
                <TextBlock x:Name="CategoryText" Margin="0,0,0,15"/>

                <TextBlock Text="Опис проєкту:" FontWeight="Bold" Foreground="#4a90e2"/>
                <TextBlock x:Name="DescriptionText" TextWrapping="Wrap" Margin="0,0,0,15"/>

                <Button x:Name="JoinButton" Content="Приєднатися" Background="#4a90e2" Foreground="White" Padding="10,5" Width="100" HorizontalAlignment="Left"/>

            </StackPanel>
        </Border>

    </StackPanel>
</Window>
