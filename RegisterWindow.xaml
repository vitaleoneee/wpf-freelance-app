<Window x:Class="FreelanceAplication.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Реєстрація" Height="600" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Background="#EAF2F8" Margin="20">
        <Border Background="White" CornerRadius="10" Padding="20" 
                VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel>
                <TextBlock Text="Реєстрація" FontSize="22" FontWeight="Bold" Foreground="#2C3E50" TextAlignment="Center" Margin="0 0 0 20"/>

                <Label Content="Ім’я користувача"/>
                <TextBox x:Name="UsernameTextBox"/>

                <Label Content="Електронна пошта"/>
                <TextBox x:Name="EmailTextBox"/>

                <Label Content="Номер телефону"/>
                <TextBox x:Name="PhoneTextBox"/>

                <Label Content="Короткий опис про себе"/>
                <TextBox x:Name="DescriptionTextBox" Height="60" TextWrapping="Wrap"/>

                <Label Content="Пароль"/>
                <PasswordBox x:Name="PasswordBox"/>

                <Label Content="Я реєструюсь як:"/>
                <ComboBox x:Name="RoleComboBox">
                    <ComboBoxItem Content="Фрілансер"/>
                    <ComboBoxItem Content="Замовник"/>
                </ComboBox>

                <Button Content="Зареєструватися" Click="RegisterButton_Click" Margin="0 20 0 0" Background="#3498DB" Foreground="White" Padding="10"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
