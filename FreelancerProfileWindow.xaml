<Window x:Class="FreelanceAplication.FreelancerProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Кабінет фрілансера" Height="500" Width="800">
    <ScrollViewer>
        <StackPanel Background="#f4f4f4" Cursor="">
            <Border Background="#4a90e2" Padding="20" Margin="20" CornerRadius="10">
                <TextBlock x:Name="WelcomeTextBlock" Text="Профіль фрілансера" FontSize="24" Foreground="White" HorizontalAlignment="Center"/>
            </Border>
            <StackPanel Margin="20">
                <Border Background="White" Padding="15" Margin="0,0,0,20" CornerRadius="5">
                    <StackPanel>
                        <TextBlock Text="Профільна інформація" FontSize="18" FontWeight="Bold"/>

                        <TextBlock x:Name="UsernameTextBlock" Text="Ім'я: ..." Margin="0,5,0,0"/>
                        <TextBlock x:Name="EmailTextBlock" Text="Email: ..." Margin="0,5,0,0"/>
                        <TextBlock x:Name="PhoneTextBlock" Text="Телефон: ..." Margin="0,5,0,0"/>
                        <TextBlock x:Name="DescriptionTextBlock" Text="Опис: ..." Margin="0,5,0,0"/>

                        <Button Content="Приєднати до команди"
                Background="#4a90e2"
                Foreground="White"
                Padding="10,8"
                Margin="0,20,0,0"
                Width="180"
                HorizontalAlignment="Left"
                FontWeight="Bold"
                Cursor="Hand"
                Click="JoinTeamButton_Click"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>
